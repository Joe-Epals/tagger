<div id="alignmentsModal" class="modal hide fade bigModal">
  <div class="modal-header">
    <a href="javascript:$('#alignmentsModal').modal('hide');" class="close">&times;</a>
    <h3>Add Education Alignment</h3>
  </div>
  <div class="modal-body">

    <input type="hidden" id="itemGUID">
    <table cellspacing='2' cellpadding='5' class="table-condensed" >
      <tr>
        <td style="text-align:left;">
          <label class="control-label" for="educationalAlignment">Educational Alignment</label>
          <select class="input-xlarge" id="educationalAlignment">
            <option selected="selected">Common Core State Standards</option>
          </select>
        </td>
        <td style="text-align:left;">
          <label class="control-label" for="alignmentType">Alignment Type</label>
          <select class="input-xlarge" id="alignmentType">
            <option>Alignment Type...</option>
            <option value='assesses'>Assesses</option>
            <option value='teaches'>Teaches</option>
            <option value='requires'>Requires</option>
            <option value='textComplexity'>TextComplexity</option>
            <option value='readingLevel'>ReadingLevel</option>
            <option value='educationalSubject'>EducationalSubject</option>
            <option value='educationLevel'>EducationLevel</option>
          </select>
        </td>
      </tr>
      <tr>
        <td style="text-align:left;">
          <label class="control-label" for="dotNotation">Dot Notation</label>
          <input type="text" class="input-xlarge" id="dotNotation" placeholder='Dot Notation'>
        </td>
        <td style="text-align:left;">
          <label class="control-label" for="itemURL">Item URL</label>
          <input type="text" class="input-xlarge" id="itemURL" placeholder='Item URL' readonly="readonly">
        </td>
      </tr>
      <tr>
        <td style="text-align:left;" colspan='2'>
          <label class="control-label" for="description">Description</label>
          <textarea type="text" class="textarea-xxlarge" id="description" rows="3" readonly="readonly"></textarea>

          <!-- button class="btn btn-mini btn-warning disabled" id="deleteButton"><i class="icon-remove"></i> Delete</button -->

        </td>
      </tr>
    </table>

  </div>
  <div class="modal-footer">
    <button class="btn btn-success" id="addButton"><i class="icon-tag"></i> Add Alignment to Session</button>
    <a href="javascript:$('#alignmentsModal').modal('hide');" class="btn">Cancel</a>
  </div>
</div>